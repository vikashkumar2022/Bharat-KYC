{
  "name": "BharatKYC Lite - Document Verification",
  "short_name": "BharatKYC",
  "description": "Secure and simple document verification for India. Works offline and optimized for low-end devices.",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#2E7D32",
  "theme_color": "#2E7D32",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-IN",
  "dir": "ltr",
  "categories": ["utilities", "productivity", "government"],
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9",
  
  "icons": [
    {
      "src": "src/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "src/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+bharatkyc",
      "url": "/?protocol=%s"
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=in.bharatkyc.lite",
      "id": "in.bharatkyc.lite"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "document",
          "accept": ["image/jpeg", "image/png", "image/webp"]
        }
      ]
    }
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
