{
  "name": "bharatkyc-lite-server",
  "version": "1.0.0",
  "description": "Backend server for BharatKYC Lite - Document verification and KYC processing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t bharatkyc-lite .",
    "docker:run": "docker run -p 3000:3000 bharatkyc-lite"
  },
  "keywords": [
    "kyc",
    "document-verification",
    "aadhaar",
    "pan",
    "digilocker",
    "ocr",
    "face-recognition",
    "india",
    "pwa",
    "offline-first"
  ],
  "author": "BharatKYC Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "uuid": "^9.0.0",
    "sharp": "^0.32.5",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.7",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.5.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.0.2",
    "@types/jest": "^29.5.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bharatkyc/bharatkyc-lite.git"
  },
  "bugs": {
    "url": "https://github.com/bharatkyc/bharatkyc-lite/issues"
  },
  "homepage": "https://lite.bharatkyc.in",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ]
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "prettier"],
    "env": {
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
