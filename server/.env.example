# Environment Configuration for BharatKYC Lite Server

# Server Configuration
PORT=3000
NODE_ENV=development
API_SECRET=bharatkyc-secret-key-change-in-production

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# DigiLocker Integration
DIGILOCKER_CLIENT_ID=your-digilocker-client-id
DIGILOCKER_CLIENT_SECRET=your-digilocker-client-secret
DIGILOCKER_REDIRECT_URI=http://localhost:3000/api/digilocker/callback

# Database Configuration (Optional - for production)
MONGODB_URI=mongodb://localhost:27017/bharatkyc
REDIS_URL=redis://localhost:6379

# External API Keys (Replace with actual service providers)
OCR_API_KEY=your-ocr-service-api-key
FACE_API_KEY=your-face-recognition-api-key
SMS_API_KEY=your-sms-service-api-key

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=10

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bharatkyc.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Features Toggle
ENABLE_DIGILOCKER=true
ENABLE_FACE_VERIFICATION=true
ENABLE_VOICE_GUIDANCE=true
ENABLE_ANALYTICS=false
